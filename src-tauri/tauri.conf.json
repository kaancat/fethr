{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "devPath": "http://localhost:5176",
    "distDir": "../dist"
  },
  "package": {
    "productName": "Fethr",
    "version": "0.1.0"
  },
    "tauri": {    "allowlist": {      "all": false,      "http": {        "all": false,        "request": true,        "scope": ["https://dttwcuqlnfpsbkketppf.supabase.co/*"]      },      "globalShortcut": {        "all": true      },      "clipboard": {        "all": false,        "writeText": true,        "readText": true      },
      "window": {
        "all": true,
        "create": true, 
        "hide": true,
        "show": true,
        "setAlwaysOnTop": true,
        "setSize": true,
        "startDragging": true
      },
      "shell": {
        "all": false,
        "execute": false,
        "open": true,
        "scope": [],
        "sidecar": false
      },
      "dialog": {
        "all": false,
        "message": true
      },
      "notification": {
        "all": true
      },
      "path": {
        "all": true
      },
      "fs": {
        "all": true,
        "scope": ["$APPDATA/*", "$APPDATA/**/*", "$APPCONFIG/*", "$APPCONFIG/**/*", "$TEMP/*"]
      }
    },
    "bundle": {
      "active": true,
      "category": "Productivity",
      "copyright": "",
      "deb": {
        "depends": []
      },
      "externalBin": [
        "vendor/whisper",
        "vendor/ffmpeg"
      ],
      "icon": [
        "icons/icon.ico",
        "icons/icon.png"
      ],
      "identifier": "com.fethr.app",
      "longDescription": "A lightweight, always-available transcription app.",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [
        "vendor/models"
      ],
      "shortDescription": "Voice transcription app",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": null
    },
    "systemTray": {
      "iconPath": "icons/icon.ico",
      "iconAsTemplate": false
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "label": "main",
        "title": "fethr",
        "width": 800,
        "height": 600,
        "visible": false,
        "decorations": true,
        "transparent": false,
        "alwaysOnTop": false,
        "skipTaskbar": false,
        "resizable": true,
        "fullscreen": false
      },
      {
        "label": "pill",
        "url": "http://localhost:5176/pill",
        "width": 280,
        "height": 75,
        "visible": true,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "resizable": false,
        "fullscreen": false,
        "x": 1670,
        "y": 961
      }
    ]
  }
} 

