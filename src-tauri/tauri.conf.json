{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "devPath": "http://localhost:5176",
    "distDir": "../dist"
  },
  "package": {
    "productName": "Fethr",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "globalShortcut": {
        "all": true
      },
      "clipboard": {
        "all": false,
        "writeText": true,
        "readText": true
      },
      "window": {
        "all": true,
        "create": true, 
        "hide": true,
        "show": true,
        "setAlwaysOnTop": true,
        "setSize": true,
        "startDragging": true
      },
      "shell": {
        "all": false,
        "execute": false,
        "open": true,
        "scope": [],
        "sidecar": false
      },
      "dialog": {
        "all": false,
        "message": true
      },
      "notification": {
        "all": true
      },
      "path": {
        "all": true
      },
      "fs": {
        "all": true,
        "scope": ["$APPDATA/*", "$APPDATA/**/*", "$APPCONFIG/*", "$APPCONFIG/**/*", "$TEMP/*"]
      }
    },
    "bundle": {
      "active": true,
      "category": "Productivity",
      "copyright": "",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.fethr.app",
      "longDescription": "A lightweight, always-available transcription app.",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [],
      "shortDescription": "Voice transcription app",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": null
    },
    "systemTray": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 400,
        "resizable": true,
        "title": "Fethr Debug",
        "width": 600,
        "decorations": true,
        "transparent": false,
        "alwaysOnTop": true,
        "skipTaskbar": false,
        "visible": true,
        "url": "/",
        "label": "main"
      }
    ]
  }
} 

